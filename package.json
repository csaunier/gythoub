{
  "name": "gythoub",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev:nextjs": "turbo dev --filter=@gythoub/nextjs",
    "dev:ui": "turbo dev --filter=@gythoub/docusaurus",
    "dev:landingPage": "turbo dev --filter=@gythoub/landingpage",
    "lint:ui": "turbo lint --filter=@gythoub/ui",
    "lint:nextjs": "turbo lint --filter=@gythoub/nextjs",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "workspaces/landingPage",
    "workspaces/apps/*",
    "workspaces/packages/*",
    "workspaces/ui/*",
    "workspaces/domains"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
